doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title!=title
  if fileIs.video
        link(href='https://vjs.zencdn.net/8.3.0/video-js.css' rel='stylesheet')
        script(src='https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js')
        script(src='https://vjs.zencdn.net/8.3.0/video.min.js')
        script(src='https://cdn.tailwindcss.com')
        script(type='text/javascript').
  script(src='https://cdn.tailwindcss.com')
  style.
    body {
    background-color: #1a202c;
    }
    p {
    text-align: center;
    }
.flex.items-center.justify-center.h-screen
  .max-w-lg.bg-gray-900.rounded-lg.shadow-lg.p-6
    h1.text-white.text-2xl.mb-4.text-center!=title
    .flex.items-center.justify-center
    if fileIs.video
      center
        img.h-auto.max-w-full.rounded-lg.shadow-none.transition-shadow.duration-300.ease-in-out(onclick='openModal()' src=`${ThumbnailUrl}` alt='Your Image' class='hover:shadow-lg hover:shadow-black/30')
    else if fileIs.image
      center
        img.h-auto.max-w-full.rounded-lg.shadow-none.transition-shadow.duration-300.ease-in-out(onclick='openModal()' src=`${resourceAttr.src}` alt='Your Image' class='hover:shadow-lg hover:shadow-black/30')
    .mt-4.text-white
      .flex.items-center.justify-center.space-x-4
        a.text-white(class='hover:text-gray-400' target='_blank' href='https://link.storjshare..png?download=yes' download='opera_kOHA3TCNnD.png') Download
        a |
        a.text-white(class='hover:text-gray-400' onclick='openModal()') View
      p Uploaded by: #[strong!=uploader]
      p Size: #{size}
      p Date of Upload: #{timestamp}
    .mt-4
      img.w-full.h-64(onclick='openModalMap()' src=`${MapUrl.src}` frameborder='0' allowfullscreen='')
#modal.fixed.inset-0.bg-black.bg-opacity-75.flex.items-center.justify-center.hidden
  .max-w-full.h-full.flex.flex-col.items-center.justify-center
    h1.text-white.text-2xl.mb-4.text-center!=title
    if fileIs.image
      img.h-auto.max-w-full(src=`${resourceAttr.src}` alt='Your Image')
    else if fileIs.video
      .video-container
        video#my-video.video-js(vjs-fluid="true" controls width="640" preload="auto" data-setup='{}')
          source(src=resourceAttr.src type='video/mp4')
          p.vjs-no-js
          | To view this video please enable JavaScript, and consider upgrading to a
          | web browser that
          a(href='https://videojs.com/html5-video-support/' target='_blank') supports HTML5 video
    button.absolute.top-0.right-0.mt-4.mr-4.text-gray-400(onclick='closeModal()' class='hover:text-white focus:outline-none')
      svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M6 18L18 6M6 6l12 12')
#modalmap.fixed.inset-0.bg-black.bg-opacity-75.flex.items-center.justify-center.hidden
  .max-w-full.h-full.flex.flex-col.items-center.justify-center
    h1.text-white.text-2xl.mb-4.text-center!=title
    img.max-w-full.max-h-full(style="background-color: none;" src=MapUrl.src alt='Your Image')
    button.absolute.top-0.right-0.mt-4.mr-4.text-gray-400(onclick='closeModalMap()' class='hover:text-white focus:outline-none')
      svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
        path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M6 18L18 6M6 6l12 12')
script.
  function openModal() {
  document.getElementById('modal').classList.remove('hidden');
  }
  function closeModal() {
  document.getElementById('modal').classList.add('hidden');
    const video = document.querySelector("#my-video.video-js");
    video.pause();
    video.currentTime = 0;
  }
  function openModalMap() {
  document.getElementById('modalmap').classList.remove('hidden');
  }
  function closeModalMap() {
  document.getElementById('modalmap').classList.add('hidden');
  }
